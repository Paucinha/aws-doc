resource "aws_iam_policy" "lambda_policy" {
  name        = "lamda_policy"
  path        = "/"
  description = "IAM policy"

  policy = <<EOF
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:us-east-1:804774874907:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:us-east-1:804774874907:log-group:/aws/lambda/http-crud-function:*"
            ]
        }
    ]
}
EOF
}

resource "aws_iam_policy" "lambda_dynamodb" {
  name        = "lamda_dynamodb"
  path        = "/"
  description = "IAM policy"

  policy = <<EOF
